<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintLeft_toLeftOf="@+id/record"
        app:layout_constraintTop_toBottomOf="@+id/record"/>

    <TextView
        android:id="@+id/heroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="heroName"
        android:textColor="@color/White"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/heroImage"
        app:layout_constraintTop_toTopOf="@+id/heroImage"/>

    <TextView
        android:id="@+id/heroRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="heroRecord"
        android:textColor="@color/White"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/heroName"
        app:layout_constraintTop_toBottomOf="@+id/heroName"/>

    <TextView
        android:id="@+id/record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingTop="1dp"
        android:text="record"
        android:textColor="@color/White"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>